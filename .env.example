# ===========================================
# ENVIRONMENT VARIABLES - TEMPLATE FILE
# ===========================================
# Copy this file to .env and fill in your actual values
# Set these same variables in Railway dashboard for production

# Server Configuration
PORT=3000
NODE_ENV=production

# Supabase Configuration
# Get these from your Supabase project settings
SUPABASE_URL=your_supabase_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Solana Configuration
# Use mainnet-beta for production, devnet for testing
SOLANA_NETWORK=mainnet-beta
# Get a free RPC URL from Helius, QuickNode, or Alchemy
SOLANA_RPC_URL=your_solana_rpc_url_here

# Treasury Wallet - KEEP THIS SECRET!
# This wallet sends tokens to users when they claim rewards
# Generate a new wallet and keep the private key secure
TREASURY_PRIVATE_KEY=your_treasury_private_key_base58_here

# Token Configuration
# The SPL token mint address you want to distribute
TOKEN_MINT_ADDRESS=your_token_mint_address_here

# Withdrawal Settings
MIN_WITHDRAWAL=1000
MAX_WITHDRAWAL_PER_DAY=100000000
